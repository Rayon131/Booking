@model IEnumerable<AppData.LoaiPhongDichVu>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DichVu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoaiPhong)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DichVu.Hinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiPhong.Giuong)
            </td>
             <td>
                    <a href="@Url.Action("Details", new { id = item.ID })" class="btn btn-info btn-sm">Chi Tiết</a>
                    <a href="@Url.Action("Edit", new { id = item.ID })" class="btn btn-warning btn-sm">Sửa</a>
                    <a href="@Url.Action("Delete", new { id = item.ID })" class="btn btn-danger btn-sm">Xóa</a>
                </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
