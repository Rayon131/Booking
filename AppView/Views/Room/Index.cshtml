
    @using AppView.ViewModels
    @model PaginatedLoaiPhongVM

    <div style="margin:40px;" class="row huhu">
        <div class="col-md-12">
            @foreach (var loaiPhong in Model.LoaiPhongs)
            {
                <div class="row">
                    <div class="col-md-3">
                        <div class="room-img">
                            <div class="box12">
                                <img src="~/img/room/@loaiPhong.Anh">
                                <div class="box-content">
                                    <h3 class="title">@loaiPhong.TenLoaiPhong</h3>
                                    <ul class="icon">
                                        <li><a asp-action="Details" asp-route-id="@loaiPhong.MaLoaiPhong"><i class="fa fa-link"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="room-des">
                            <h3><a href="#">@loaiPhong.TenLoaiPhong</a></h3>
                            <p>@loaiPhong.MoTa</p>
                             <ul class="room-size">
                                    <li><i class="fa fa-arrow-right"></i>Size: @loaiPhong.Size </li>
                                    <li><i class="fa fa-arrow-right"></i>Beds: @loaiPhong.Giuong </li>
                                </ul>
                            <ul class="room-icon">
                                @foreach (var dichVu in loaiPhong.DichVus)
                                {
                                    @if (dichVu.TrangThai)
                                    {
                                        <li>
                                            <img style="margin-right: 5px; height: 40px; width: 40px;" src="~/img/icon/@dichVu.Hinh" alt="" />
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="room-rate">
                            <h3 style="color: #FFD700;">From</h3>
                            <h1 style="color: #FFD700; font-size: 30px; font-weight: 900; padding: 15px 0; background: #353535;">
                                @loaiPhong.GiaGiamGia
                                <p style="text-decoration: line-through; text-decoration-thickness: 3px; color: lightgray; text-decoration-color: grey; font-size: 20px; font-weight: 900; padding-bottom: 0px; background: #353535;">
                                    @loaiPhong.GiaGoc
                                </p>
                            </h1>
                            <a class="book-now"  href="#">Book Now</a>
                        </div>
                    </div>
                </div>
                <hr>
            }
        </div>
    </div>
    <style>
    .room-size {
        margin: 0 0 25px 0;
        padding: 0;
    }

       .room-size li {
            display: inline-block;
            font-size: 14px;
            margin-right: 15px;
            list-style-type: none;
        }

          .room-size li i {
                margin-right: 6px;
            }
        .pagination .page-link {
            color: #ffc107; /* Màu vàng */
            border-color: #ffc107; /* Màu viền vàng */
        }

            .pagination .page-link:hover {
                background-color: #ffc107; /* Nền vàng khi hover */
                color: #fff; /* Chữ trắng */
            }

        .pagination .active .page-link {
            background-color: #ffc107; /* Nền vàng cho trang hiện tại */
            border-color: #ffc107; /* Viền vàng */
            color: #fff; /* Chữ trắng */
        }

        .pagination .disabled .page-link {
            color: #ddd; /* Màu xám nhạt cho trạng thái disabled */
        }
    </style>

    <div class="d-flex justify-content-center my-3">
        <nav>
            <ul class="pagination">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage - 1 })">«</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link">«</span>
                    </li>
                }

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    if (i == Model.CurrentPage)
                    {
                        <li class="page-item active">
                            <span class="page-link">@i</span>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                        </li>
                    }
                }

                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage + 1 })">»</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link">»</span>
                    </li>
                }
            </ul>
        </nav>
    </div>


    <style>

        .book-now {
            display: block;
            background-color: black; /* Màu nền ban đầu */
            padding: 10px 30px;
            
            font-size: 16px;
            color: #FFD700 ;
           
            transition: background-color 0.3s, color 0.3s; /* Hiệu ứng chuyển màu nền và chữ */
            
        }

            .book-now:hover {
                color:black; /* Màu chữ khi hover */
                background-color: yellow;
            }
        .huhu{
            margin: 0 auto;
            max-width: 1200px;
        }
        .room-item {
            margin-bottom: 30px;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            background-color: #fff;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .room-des{
            text-align:center;
        }

            .room-item:hover {
               /*  box-shadow: 0px 8px 12px rgba(0, 0, 0, 0.15); */
                transform: translateY(-5px);
            }

        .room-img .box12 {
            position: relative;
        }

            .room-img .box12 img {
                width: 150%;
               
                transition: transform 0.3s ease;
            }

            .room-img .box12:hover img {
                transform: scale(1.05);
            }

        .box-content {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
           /*  background: rgba(0, 0, 0, 0.6); */
            color: white;
            padding: 10px;
            border-radius: 0 0 8px 8px;
        }

        .title {
            font-size: 18px;
            font-weight: bold;
            margin: 0;
        }

        .room-des p {
            font-size: 14px;
            color: #666;
        }

        .room-icon li {
            display: inline-block;
            margin-right: 5px;
        }

        .service-icon {
            height: 40px;
            width: 40px;
        }

        .room-rate {
            height : auto;
            color: #FFD700;
            background-color: black;     
            text-align: center;
        }

        .price {
            color: #FFD700;
            font-size: 30px;
            font-weight: 900;
            margin: 15px 0;
        }

        .old-price {
            text-decoration: line-through;
            color: lightgray;
            font-size: 20px;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
            font-size: 16px;
            padding: 10px 20px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .pagination-container {
            margin-top: 20px;
        }

            .pagination-container a {
                padding: 8px 20px;
                margin: 0 5px;
                border-radius: 5px;
                background-color: #f1f1f1;
                color: #333;
                text-decoration: none;
                font-size: 16px;
            }

                .pagination-container a:hover {
                    background-color: #007bff;
                    color: white;
                }

    </style>
   
