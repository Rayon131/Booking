@model AppData.LienHe

@{
    ViewData["Title"] = "Chi Tiết Liên Hệ";
}

<h1 class="text-center">Chi Tiết Liên Hệ</h1>


<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow mb-4">
            <div class="card-body">
                <dl class="row">
                    <!-- Số Điện Thoại -->
                    <dt class="col-sm-4 font-weight-bold">Số điện thoại</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.SoDienThoai)</dd>

                    <!-- URL -->
                    <dt class="col-sm-4 font-weight-bold">URL</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Url)</dd>

                    <!-- Logo -->
                    <dt class="col-sm-4 font-weight-bold">Logo</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.Logo))
                        {
                            <img src="~/img/icon/@Model.Logo" alt="Logo" class="img-thumbnail" style="max-width: 200px; height: auto;" />
                        }
                        else
                        {
                            <span class="text-muted">Chưa có logo</span>
                        }
                    </dd>

                    <!-- Trạng Thái -->
                    <dt class="col-sm-4 font-weight-bold">Trạng thái</dt>
                    <dd class="col-sm-8">
                        @if (Model.TrangThai)
                        {
                            <span class="badge badge-success">Hoạt động</span>
                        }
                        else
                        {
                            <span class="badge badge-secondary">Không hoạt động</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        <!-- Nút điều hướng -->
        <div class="text-center">
            <a asp-action="Edit" asp-route-id="@Model?.ID" class="btn btn-primary">Chỉnh sửa</a>
            <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
        </div>
    </div>
</div>