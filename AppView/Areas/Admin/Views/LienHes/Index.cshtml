@model IEnumerable<AppData.LienHe>

@{
    ViewData["Title"] = "Danh sách Liên Hệ";
}

<h1 class="text-center">Danh sách Liên Hệ</h1>

<p class="text-right" style="margin-left:50%;">
    <a asp-action="Create" class="btn btn-primary">Thêm Liên Hệ Mới</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Số Điện Thoại</th>
            <th>Logo</th>
            <th>URL</th>
            <th>Trạng Thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.SoDienThoai)</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Logo))
                    {
                        <img src="~/img/icon/@item.Logo" alt="Logo" class="img-thumbnail" style="max-width: 100px; height: auto;" />
                    }
                    else
                    {
                        <span class="text-muted">Chưa có logo</span>
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.Url)</td>
                <td>
                    @if (item.TrangThai)
                    {
                        <span class="badge badge-success">Hoạt động</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary">Không hoạt động</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
