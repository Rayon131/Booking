@model AppData.WelCome

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">@ViewData["Title"]</h1>


<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <!-- Wel -->
                    <dt class="col-sm-4 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Wel)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Wel)
                    </dd>

                    <!-- NoiDung -->
                    <dt class="col-sm-4 font-weight-bold">
                        @Html.DisplayNameFor(model => model.NoiDung)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.NoiDung)
                    </dd>

                    <!-- TrangThai -->
                    <dt class="col-sm-4 font-weight-bold">
                        @Html.DisplayNameFor(model => model.TrangThai)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.TrangThai)
                    </dd>
                </dl>

				<!-- Action Buttons -->
				<div class="text-center mt-3">
					<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.ID">
						Edit
					</a>
					<a class="btn btn-secondary" asp-action="Index">
						Back to List
					</a>
				</div>

            </div>
        </div>
    </div>
</div>


@section Scripts {
}
