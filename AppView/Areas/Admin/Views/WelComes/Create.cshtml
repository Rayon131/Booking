@model AppData.WelCome

@{
    ViewData["Title"] = "Create WelCome";
}

<h1 class="text-center">@ViewData["Title"]</h1>



<div class="row justify-content-center" >
    <div class="" style="margin-left: 30%">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Wel Field -->
            <div class="form-group">
                <label asp-for="Wel" class="control-label">Wel Name</label>
                <input asp-for="Wel" class="form-control" placeholder="Enter Wel Name" />
                <span asp-validation-for="Wel" class="text-danger"></span>
            </div>

            <!-- NoiDung Field -->
            <div class="form-group">
                <label asp-for="NoiDung" class="control-label">Content</label>
                <input asp-for="NoiDung" class="form-control" placeholder="Enter Content" />
                <span asp-validation-for="NoiDung" class="text-danger"></span>
            </div>

            <!-- TrangThai Checkbox -->
            <div class="form-group form-check">
                <input asp-for="TrangThai" class="form-check-input" type="checkbox" />
                <label class="form-check-label" for="TrangThai">@Html.DisplayNameFor(model => model.TrangThai)</label>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-block">
                      Create
                </button>
            </div>
			<!-- Back to List Button -->
			<div class="text-center mt-3">
				<a class="btn btn-secondary" asp-action="Index">
					Back to List
				</a>
			</div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
