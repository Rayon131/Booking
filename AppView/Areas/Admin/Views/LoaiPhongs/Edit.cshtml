@model AppData.LoaiPhong

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";  // Ensure the correct path to layout
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Edit" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="MaLoaiPhong" />

                <!-- Trạng thái -->
                <div class="form-group">
                    <label asp-for="TrangThai" class="control-label">Trạng thái</label>
                    <select asp-for="TrangThai" class="form-control">
                        <option value="true" >Hoạt động</option>
                        <option value="false" >Không hoạt động</option>
                    </select>
                    <span asp-validation-for="TrangThai" class="text-danger"></span>
                </div>

                <!-- Hiển thị ảnh hiện tại -->
                <div class="form-group">
                    <label>Ảnh hiện tại</label>
                    <div>
                        @if (!string.IsNullOrEmpty(Model.Anh))
                        {
                            <img src="~/img/room/@Model.Anh" alt="Loại Phòng" style="max-width: 100%; height: auto; margin-bottom: 10px;" />
                        }
                        else
                        {
                            <p>Chưa có ảnh</p>
                        }
                    </div>
                </div>

                <!-- Chọn ảnh mới -->
                <div class="form-group">
                    <label for="imageFile">Chọn ảnh mới (nếu muốn thay đổi)</label>
                    <input type="file" name="imageFile" class="form-control" />
                    <span asp-validation-for="Anh" class="text-danger"></span>
                </div>

                <!-- Tên Loại Phòng -->
                <div class="form-group">
                    <label asp-for="TenLoaiPhong" class="control-label">Tên Loại Phòng</label>
                    <input asp-for="TenLoaiPhong" class="form-control" placeholder="Nhập tên loại phòng" />
                    <span asp-validation-for="TenLoaiPhong" class="text-danger"></span>
                </div>

                <!-- Mô Tả -->
                <div class="form-group">
                    <label asp-for="MoTa" class="control-label">Mô Tả</label>
                    <textarea asp-for="MoTa" class="form-control" placeholder="Mô tả về loại phòng"></textarea>
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>

                <!-- Giá Gốc -->
                <div class="form-group">
                    <label asp-for="GiaGoc" class="control-label">Giá Gốc</label>
                    <input asp-for="GiaGoc" class="form-control" placeholder="Nhập giá gốc" />
                    <span asp-validation-for="GiaGoc" class="text-danger"></span>
                </div>

                <!-- Giường -->
                <div class="form-group">
                    <label asp-for="Giuong" class="control-label">Giường</label>
                    <input asp-for="Giuong" class="form-control" placeholder="Nhập số giường" />
                    <span asp-validation-for="Giuong" class="text-danger"></span>
                </div>

                <!-- Size -->
                <div class="form-group">
                    <label asp-for="Size" class="control-label">Kích Thước</label>
                    <input asp-for="Size" class="form-control" placeholder="Nhập kích thước phòng (m²)" />
                    <span asp-validation-for="Size" class="text-danger"></span>
                </div>

                <!-- Giá Giảm Giá -->
                <div class="form-group">
                    <label asp-for="GiaGiamGia" class="control-label">Giá Giảm Giá</label>
                    <input asp-for="GiaGiamGia" class="form-control" placeholder="Nhập giá giảm giá" />
                    <span asp-validation-for="GiaGiamGia" class="text-danger"></span>
                </div>

                <!-- Số Phòng Còn -->
                <div class="form-group">
                    <label asp-for="SoPhongCon" class="control-label">Số Phòng Còn</label>
                    <input asp-for="SoPhongCon" class="form-control" placeholder="Nhập số phòng còn" />
                    <span asp-validation-for="SoPhongCon" class="text-danger"></span>
                </div>

                <!-- Lưu -->
                <div class="form-group text-center">
                    <input type="submit" value="Lưu" class="btn btn-success" />
                </div>

				<div class="text-center mt-3">
					<a asp-action="Index">Back to List</a>
				</div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
