@model AppData.LoaiPhong

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- TenLoaiPhong -->
                <div class="form-group">
                    <label asp-for="TenLoaiPhong" class="control-label"></label>
                    <input asp-for="TenLoaiPhong" class="form-control" placeholder="Enter room type name" />
                    <span asp-validation-for="TenLoaiPhong" class="text-danger"></span>
                </div>

                <!-- MoTa -->
                <div class="form-group">
                    <label asp-for="MoTa" class="control-label"></label>
                    <input asp-for="MoTa" class="form-control" placeholder="Enter description" />
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>

                <!-- Image File -->
                <div class="form-group">
                    <label for="imageFile" class="control-label">Upload Image</label>
                    <input type="file" name="imageFile" class="form-control-file" />
                    <span asp-validation-for="Anh" class="text-danger"></span>
                </div>
                <!-- GiaGoc -->
                <div class="form-group">
                    <label asp-for="GiaGoc" class="control-label"></label>
                    <input asp-for="GiaGoc" class="form-control" placeholder="Enter original price" />
                    <span asp-validation-for="GiaGoc" class="text-danger"></span>
                </div>

                <!-- GiaGiamGia -->
                <div class="form-group">
                    <label asp-for="GiaGiamGia" class="control-label"></label>
                    <input asp-for="GiaGiamGia" class="form-control" placeholder="Enter discounted price" />
                    <span asp-validation-for="GiaGiamGia" class="text-danger"></span>
                </div>

                <!-- SoPhongCon -->
                <div class="form-group">
                    <label asp-for="SoPhongCon" class="control-label"></label>
                    <input asp-for="SoPhongCon" class="form-control" placeholder="Enter available rooms" />
                    <span asp-validation-for="SoPhongCon" class="text-danger"></span>
                </div>

                <!-- Giuong -->
                <div class="form-group">
                    <label asp-for="Giuong" class="control-label"></label>
                    <input asp-for="Giuong" class="form-control" placeholder="Enter number of beds" />
                    <span asp-validation-for="Giuong" class="text-danger"></span>
                </div>

                <!-- Size -->
                <div class="form-group">
                    <label asp-for="Size" class="control-label"></label>
                    <input asp-for="Size" class="form-control" placeholder="Enter room size (m²)" />
                    <span asp-validation-for="Size" class="text-danger"></span>
                </div>

                <!-- TrangThai -->
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="TrangThai" /> @Html.DisplayNameFor(model => model.TrangThai)
                    </label>
                </div>

                <!-- Submit Button -->
                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>

				<div class="text-center mt-3">
					<a asp-action="Index">Back to List</a>
				</div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
