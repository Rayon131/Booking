@model IEnumerable<AppData.TinTuc>

@{
	ViewData["Title"] = "Tin Tức";
}


<title>@ViewData["Title"]</title>
<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container my-4">
	<div class="d-flex justify-content-between align-items-center mb-4">
		<h1 class="h3">Danh Sách Tin Tức</h1>
		<a asp-action="Create" class="btn btn-primary">
			<i class="bi bi-plus-circle"></i> Thêm Mới
		</a>
	</div>

	<table class="table table-bordered table-hover">
		<thead class="table-light">
			<tr>
				<th>@Html.DisplayNameFor(model => model.TenTinTucChinh)</th>
				<th>@Html.DisplayNameFor(model => model.TenTinTucPhu)</th>
				<th>@Html.DisplayNameFor(model => model.HinhAnh1)</th>
				<th>@Html.DisplayNameFor(model => model.HinhAnh2)</th>
				<th>@Html.DisplayNameFor(model => model.HinhAnh3)</th>
				<th>@Html.DisplayNameFor(model => model.NoiDungNgan)</th>
				<th>@Html.DisplayNameFor(model => model.NoiDungChiTiet1)</th>
				<th>@Html.DisplayNameFor(model => model.NoiDungChiTiet2)</th>
				<th>@Html.DisplayNameFor(model => model.NoiDungChiTiet3)</th>
				<th>@Html.DisplayNameFor(model => model.NoiDungChiTiet4)</th>
				<th>@Html.DisplayNameFor(model => model.TrangThai)</th>
				<th class="text-center">Hành Động</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@Html.DisplayFor(modelItem => item.TenTinTucChinh)</td>
					<td>@Html.DisplayFor(modelItem => item.TenTinTucPhu)</td>
					<td>
						@if (!string.IsNullOrEmpty(item.HinhAnh1))
						{
							<img src="~/img/about/@item.HinhAnh1" alt="Hinh Anh" class="img-thumbnail" style="max-width: 100px;">
						}
						else
						{
							<span class="text-muted">Không có ảnh</span>
						}
					</td>
					<td>
						@if (!string.IsNullOrEmpty(item.HinhAnh2))
						{
							<img src="~/img/about/@item.HinhAnh2" alt="Hinh Anh" class="img-thumbnail" style="max-width: 100px;">
						}
						else
						{
							<span class="text-muted">Không có ảnh</span>
						}
					</td>
					<td>
						@if (!string.IsNullOrEmpty(item.HinhAnh3))
						{
							<img src="~/img/about/@item.HinhAnh3" alt="Hinh Anh" class="img-thumbnail" style="max-width: 100px;">
						}
						else
						{
							<span class="text-muted">Không có ảnh</span>
						}
					</td>
					<td>@Html.DisplayFor(modelItem => item.NoiDungNgan)</td>
					<td>@Html.DisplayFor(modelItem => item.NoiDungChiTiet1)</td>
					<td>@Html.DisplayFor(modelItem => item.NoiDungChiTiet2)</td>
					<td>@Html.DisplayFor(modelItem => item.NoiDungChiTiet3)</td>
					<td>@Html.DisplayFor(modelItem => item.NoiDungChiTiet4)</td>
					<td>@Html.DisplayFor(modelItem => item.TrangThai)</td>
					<td class="text-center">
						<a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-warning me-1">
							<i class="bi bi-pencil"></i> Sửa
						</a>
						<a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-danger">
							<i class="bi bi-trash"></i> Xóa
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
