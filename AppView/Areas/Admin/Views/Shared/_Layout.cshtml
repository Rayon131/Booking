</head><!--/head-->

<body>
    <header id="header">
        <div style="margin-top: 100px;">
            <div class="row">
                <!-- Sidebar Menu -->
                <div class="menu-sidebar fw-bold col-sm-3" role="group" aria-label="Vertical button group">
                    <a asp-action="Index" asp-controller="LoGoes" data-ajax="true" class="menu-item">
                        <i class="bi bi-image"></i> Logo
                    </a>
                    <a asp-action="Index" asp-controller="LienHes" data-ajax="true" class="menu-item">
                        <i class="bi bi-telephone"></i> SĐT Liên Hệ
                    </a>
                    <a asp-action="Index" asp-controller="MenuItems" data-ajax="true" class="menu-item">
                        <i class="bi bi-list"></i> Menu
                    </a>
                    <a asp-action="Index" asp-controller="Slides" data-ajax="true" class="menu-item">
                        <i class="bi bi-sliders"></i> Slide
                    </a>
                    <a asp-action="Index" asp-controller="WelComes" data-ajax="true" class="menu-item">
                        <i class="bi bi-hand-thumbs-up"></i> Lời Chào
                    </a>
                    <a asp-action="Index" asp-controller="DichVus" data-ajax="true" class="menu-item">
                        <i class="bi bi-tools"></i> Dịch Vụ
                    </a>
                    <a asp-action="Index" asp-controller="LoaiPhongs" data-ajax="true" class="menu-item">
                        <i class="bi bi-house"></i> Loại Phòng
                    </a>
                    @* <a asp-action="Index" asp-controller="LoaiPhongDichVus" data-ajax="true" class="menu-item">
                        <i class="bi bi-grid-3x3-gap"></i> Loại Phòng Dịch Vụ
                    </a> *@
                    <a asp-action="Index" asp-controller="AnhChiTiets" data-ajax="true" class="menu-item">
                        <i class="bi bi-images"></i> Ảnh Chi Tiết
                    </a>
                    <a asp-action="Index" asp-controller="TinTucs" data-ajax="true" class="menu-item">
                        <i class="bi bi-newspaper"></i> Tin Tức
                    </a>
                    @* <a href="/TaiKhoan/Index" data-ajax="true" class="menu-item">
                        <i class="bi bi-person"></i> Tài Khoản
                    </a>
                    <a asp-action="Index" asp-controller="FaceBooks" data-ajax="true" class="menu-item">
                        <i class="bi bi-facebook"></i> FB
                    </a>
                    <a asp-action="Index" asp-controller="GGs" data-ajax="true" class="menu-item">
                        <i class="bi bi-google"></i> Google
                    </a>
                    <a asp-action="Index" asp-controller="TikToks" data-ajax="true" class="menu-item">
                        <i class="bi bi-tiktok"></i> Tik Tok
                    </a>
                    <a asp-action="Index" asp-controller="Inters" data-ajax="true" class="menu-item">
                        <i class="bi bi-instagram"></i> Instagram
                    </a>*@
                    <a asp-action="Index" asp-controller="TaiKhoanns" data-ajax="true" class="menu-item">
                        <i class="bi bi-newspaper"></i> Tài Khoản
                    </a> 
                    <a href="/Login/Logout" class="menu-item btn btn-danger">
                        Logout
                    </a>
                </div>
                <!-- Content Container -->
                <div class="col-sm-9 container" id="content-container">
                    @* @Html.Partial("_IndexTaiKhoanPartial") *@
                </div>
            </div>
        </div>
    </header>

    <section>
        <div class="container">
            <div class="row" style="margin-left:10%">

                @RenderBody()
            </div>
        </div>
    </section>
    <style>
        .menu-sidebar {
            background-color: #f8f9fa;
            padding: 15px;
            min-height: 100vh; /* Đảm bảo menu kéo dài toàn chiều cao */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            position: fixed; /* Giữ menu cố định khi cuộn */
            top: 0;
            left: 0;
            overflow-y: auto;
            z-index: 1000;
            width: 15%; /* Menu chiếm 20% */
        }

        .menu-item {
            display: block;
            padding: 10px 15px;
            margin: 5px 0;
            color: #212529;
            text-decoration: none;
            border-radius: 5px;
            transition: all 0.3s;
            font-size: 16px;
        }

            .menu-item i {
                margin-right: 10px;
            }

            .menu-item:hover {
                background-color: #ffc107;
                color: white;
            }

        .content-container {
            margin-left: 20%; /* Đẩy nội dung bên phải của menu */
        }

        .menu-sidebar {
            background-color: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .menu-item {
            display: flex;
            align-items: center;
            padding: 10px 15px;
            margin: 5px 0;
            color: #212529;
            text-decoration: none;
            border-radius: 5px;
            transition: all 0.3s;
            font-size: 16px;
        }

            .menu-item i {
                margin-right: 10px;
                font-size: 20px;
            }

            .menu-item:hover {
                background-color: #ffc107;
                color: white;
                transform: translateX(5px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
            }

            .menu-item:active {
                background-color: #ffae00;
            }

        }
    </style>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="
https://cdn.jsdelivr.net/npm/sweetalert2@11.13.3/dist/sweetalert2.all.min.js
"></script>

    <script>
        $(function () {
            var mess = '@TempData["success"]';
            if (mess != '') {
                Swal.fire(mess);
            }
        });
    </script>


    <!-- Vendor JavaScript File -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/jquery/jquery-migrate.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/easing/easing.min.js"></script>
    <script src="~/vendor/stickyjs/sticky.js"></script>
    <script src="~/vendor/superfish/hoverIntent.js"></script>
    <script src="~/vendor/superfish/superfish.min.js"></script>
    <script src="~/vendor/wow/wow.min.js"></script>
    <script src="~/vendor/slick/slick.min.js"></script>
    <script src="~/vendor/tempusdominus/js/moment.min.js"></script>
    <script src="~/vendor/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/vendor/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Booking Javascript File -->
    <script src="~/js/booking.js"></script>
    <script src="~/js/jqBootstrapValidation.min.js"></script>

    <!-- Main Javascript File -->
    <script src="~/js/main.js"></script>
</body>
</html>