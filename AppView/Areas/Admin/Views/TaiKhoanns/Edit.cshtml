@model AppData.TaiKhoann

@{
    ViewData["Title"] = "Edit Account";
}

<h1 class="text-center mb-4">Edit Account</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="ID" />

                <!-- Account Name -->
                <div class="form-group">
                    <label asp-for="TaiKhoan" class="control-label">Account Name</label>
                    <input asp-for="TaiKhoan" class="form-control" placeholder="Edit account name" />
                    <span asp-validation-for="TaiKhoan" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="form-group">
                    <label asp-for="MatKhau" class="control-label">Password</label>
                    <input asp-for="MatKhau" type="password" class="form-control" placeholder="Edit password" />
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="form-group text-center">
                    <input type="submit" value="Save Changes" class="btn btn-primary btn-lg" />
                <a style="margin-top:10px" asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
                </div>

			

            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
