@model AppData.AnhChiTiet

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Chi Tiết Ảnh</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <!-- Hiển thị ảnh hiện tại -->
            <div class="form-group">
                <label>Ảnh hiện tại</label>
                <div>
                    @if (!string.IsNullOrEmpty(Model.Anh))
                    {
                        <img src="~/img/room-slider/@Model.Anh" alt="Ảnh chi tiết" style="max-width: 100%; height: auto; margin-bottom: 10px;" />
                    }
                    else
                    {
                        <p>Chưa có ảnh</p>
                    }
                </div>
            </div>

            <!-- Input chọn ảnh mới -->
            <div class="form-group">
                <label for="imageFile">Chọn ảnh mới (nếu muốn thay đổi)</label>
                <input type="file" name="imageFile" class="form-control" />
                <span asp-validation-for="Anh" class="text-danger"></span>
            </div>

            <!-- Trạng thái -->
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TrangThai" /> @Html.DisplayNameFor(model => model.TrangThai)
                </label>
            </div>

            <!-- Chọn loại phòng -->
            <div class="form-group">
                <label asp-for="IdLoaiPhong" class="control-label">Loại Phòng</label>
                <select asp-for="IdLoaiPhong" class="form-control" asp-items="ViewBag.IdLoaiPhong"></select>
                <span asp-validation-for="IdLoaiPhong" class="text-danger"></span>
            </div>

            <!-- Nút lưu -->
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
