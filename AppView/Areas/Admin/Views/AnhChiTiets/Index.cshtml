@model IEnumerable<AppData.AnhChiTiet>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center mb-4">Gallery</h1>

<p class="text-center" style="margin-left: 50%">
    <a asp-action="Create" class="btn btn-primary btn-lg">Create New</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Anh)</th>
                <th>@Html.DisplayNameFor(model => model.TrangThai)</th>
                <th>@Html.DisplayNameFor(model => model.LoaiPhong)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/img/room-slider/@item.Anh" alt="Image" class="img-thumbnail" width="100" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TrangThai)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LoaiPhong.TenLoaiPhong)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>

    </script>
}
