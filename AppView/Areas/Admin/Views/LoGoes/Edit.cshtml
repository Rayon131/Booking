@model AppData.LoGo

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";  // Đảm bảo đường dẫn chính xác đến layout
}

<h1>Chỉnh sửa Logo</h1>


<div class="" style="">
    <div class="">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="ID" />

            <!-- Trạng thái -->
            <div class="form-group">
                <label asp-for="TrangThai" class="control-label">Trạng thái</label>
                <select asp-for="TrangThai" class="form-control">
                    <option value="true" selected>Hoạt động</option>
                    <option value="false">Không hoạt động</option>
                </select>
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>

            <!-- Hiển thị ảnh hiện tại -->
            <div class="form-group">
                <label>Ảnh hiện tại</label>
                <div class="mb-3">
                    @if (!string.IsNullOrEmpty(Model.Logo))
                    {
                        <img src="~/img/@Model.Logo" alt="Logo" class="img-fluid rounded shadow-sm" />
                    }
                    else
                    {
                        <p class="text-muted">Chưa có ảnh</p>
                    }
                </div>
            </div>

            <!-- Input chọn ảnh mới -->
            <div class="form-group">
                <label for="imageFile">Chọn ảnh mới (nếu muốn thay đổi)</label>
                <input type="file" name="imageFile" class="form-control-file" />
                <span asp-validation-for="Logo" class="text-danger"></span>
            </div>

            <!-- Nút lưu -->
            <div class="form-group text-center">
                <input type="submit" value="Lưu" class="btn btn-primary px-4" />
                <a asp-action="Index" class="btn btn-secondary px-4">Hủy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}